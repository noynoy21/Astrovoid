{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "main.c",
                "mainGame.c",
                "gameRound1.c",
                "gameRound2.c",
                "entity.c",
                "menu.c",
                "render.c",
                "pvp.c",
                "-o",
                "astrovoid.exe",
                "-Wall",
                "-Wextra"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/c"]
                }
            },
            "group": "build",
            "problemMatcher": ["$gcc"]
        }
    ]
}
